# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                controllers.Application.index()

GET         /movibus                                         controllers.MovibusController.read()

POST        /movibus                                         controllers.MovibusController.create()

PUT         /movibus/:id/:posicion                           controllers.MovibusController.reportarPosicion(id : Long, String : posicion)

GET         /pedidomovibus                                   controllers.MovibusController.read()

POST        /pedidomovibus                                   controllers.MovibusController.create()

PUT         /pedidomovibus/:id/:tempr                       controllers.MovibusController.reportarPosicion(id : Long, int : tempr)

POST        /usuario                                         controllers.UsuarioController.create()

GET         /usuario                                         controllers.UsuarioController.read()

GET         /usuario/:id                                     controllers.UsuarioController.get(id : Long)

GET         /usuario/:ccu/login                              controllers.UsuarioController.getByCC(ccu : Long)

POST        /usuario/:id/solicitarMovibus                    controllers.UsuarioController.solicitarMovibus(id : Long)

POST        /conductor                                       controllers.ConductorController.create()

GET         /conductor                                       controllers.ConductorController.read()

GET         /conductor/:id                                   controllers.ConductorController.get(id : Long)

GET         /conductor/desempenio/:id                        controllers.ConductorController.getDesempenio(id : Long)

GET         /conductor/mejorDesempenio                       controllers.ConductorController.getMejorDesempenio()

POST        /estacionvcub                                    controllers.EstacionVcubController.create()

GET         /estacionvcub                                    controllers.EstacionVcubController.read()

PUT         /estacionvcub/:id                                controllers.EstacionVcubController.llenarEstacion(id : Long)

PUT         /estacionvcub/:ide/usuario/:ccu                  controllers.EstacionVcubController.retiroVcub(ide : Long, ccu : Long)

PUT         /estacionvcub/:ide/usuario/:ccu/devolucionVcub   controllers.EstacionVcubController.devolucionVcub(ide : Long, ccu : Long)
         
POST        /tranvia                                         controllers.TranviaController.create()

GET         /tranvias                                        controllers.TranviaController.read()

GET         /tranvia/:id                                     controllers.TranviaController.get(id : Long)

PUT         /tranvia/update/:id                              controllers.TranviaController.update(id : Long )

POST        /tranvia/:magnitud/:tipoAccidente                controllers.TranviaController.reportarAccidente(magnitud: String, tipoAccidente: Integer)

GET         /tranvia/accidenteMasComun                       controllers.TranviaController.getAccidenteMasComun()

GET         /reportes                                        controllers.ReporteController.read()

GET         /reporte/:id                                     controllers.ReporteController.get(id : Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
